{
    "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on",
                "useSortedAttributes": "on",
                "useSortedKeys": "on",
                "useSortedProperties": "on"
            }
        },
        "enabled": true
    },
    "css": {
        "formatter": {
            "quoteStyle": "single"
        }
    },
    "files": {
        "ignoreUnknown": false
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "asNeeded",
            "jsxQuoteStyle": "single",
            "quoteStyle": "single"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "correctness": {
                "noUnusedImports": "on"
            },
            "nursery": {
                "useSortedClasses": {
                    "fix": "safe",
                    "level": "warn",
                    "options": {}
                }
            },
            "recommended": true,
            "style": {
                "noUnusedTemplateLiteral": "on",
                "useImportType": "on",
                "useNodejsImportProtocol": {
                    "fix": "safe",
                    "level": "on",
                    "options": {}
                },
                "useTemplate": "on"
            },
            "suspicious": {
                "noUnknownAtRules": "off"
            }
        }
    },
    "vcs": {
        "clientKind": "git",
        "enabled": true,
        "useIgnoreFile": true
    }
}
