extends _layout

block content
    h1 リンク
        each section, name in links
            h2= name
            each obj in section
                if obj.username
                    div.non-link
                        div(class='circle', id=obj.id)
                        p= obj.name
                        p= obj.username
                else
                    a(href=obj.link, target='_blank')
                        div.link
                            div(class='circle', id=obj.id)
                            p= obj.name
