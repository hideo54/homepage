mixin generateCircle(name, id, url)
    a(href='#{url}', target='_blank')
        div.link
            div(class='circle', id='#{id}')
            p= name

mixin generateUnlinkedCircle(name, id, username)
    div.non-link
        div(class='circle', id='#{id}')
        p #{name}
        p #{username}

