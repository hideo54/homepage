mixin image(path, alt, width)
    img(srcset=`${path}-${width}w.png, ${path}-${width*2}w.png 2x, ${path}-${width*3}w.png 3x`,
        src=`${path}-${width*3}w.png`, alt=alt, width=width)

mixin externalLink(href, name)
    //- https://developers.google.com/web/tools/lighthouse/audits/noopener
    a(href=href, target='_blank', rel='noopener')= name

doctype html
html(lang='ja')
    head
        block head
        include _head
    body
        header: block header
        main: block main
        footer: block footer